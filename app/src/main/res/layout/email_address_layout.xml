<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/invitations_button_height"
                xmlns:tools="http://schemas.android.com/tools"
                android:paddingStart="@dimen/wire__padding__regular"
                android:paddingEnd="@dimen/wire__padding__regular">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/check_box"
        android:layout_width="@dimen/share_extension__row__checkbox_size"
        android:layout_height="@dimen/share_extension__row__checkbox_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:button="@drawable/checkbox_black"
        tools:targetApi="lollipop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/check_box"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/wire__padding__small"
        android:orientation="vertical">

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:textSize="@dimen/wire__text_size__regular"/>

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:textSize="@dimen/wire__text_size__small"
            android:textColor="@color/graphite"/>

    </LinearLayout>


</RelativeLayout>
